@model PatientMedicalRecordsPViewModel

@{
    ViewData["Title"] = "My Medical Records";
    Layout = "_LayoutPatient";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model.MedicalRecords != null && Model.MedicalRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Record Date</th>
                                <th>Diagnosis</th>
                                <th>Treatment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.MedicalRecords.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.MedicalRecords[i].RecordDate.ToString("yyyy-MM-dd")</td>
                                    <td>@Model.MedicalRecords[i].Diagnosis</td>
                                    <td>@Model.MedicalRecords[i].Treatment</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    No medical records found.
                </div>
            }
        </div>
    </div>
</div>

