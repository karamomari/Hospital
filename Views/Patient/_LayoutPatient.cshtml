@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            position: fixed; /* جعل الشريط الجانبي ثابتًا */
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            z-index: 999; /* التأكد من أن الـ sidebar في الأعلى */
        }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar .active {
                background-color: #007bff;
            }

        .content-area {
            margin-left: 250px; /* التأكد من أن المحتوى يبدأ من المسافة المناسبة */
            padding: 20px;
            min-height: 100vh; /* لضمان تغطية كامل الصفحة */
        }

            .content-area .container {
                margin-top: 20px; /* إضافة مسافة أعلى للمحتوى */
            }

        .nav-link {
            padding: 10px 15px;
        }

        h3 {
            font-size: 24px;
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3 class="text-center text-white">Patient Dashboard</h3>
            <nav class="nav flex-column">
                <a class="nav-link text-white active" href="@Url.Action("Dashboard", "Patient")">
                    <i class="bi bi-house-door"></i> Home
                </a>
                <a class="nav-link text-white" href="@Url.Action("MyAppointments", "Patient")">
                    <i class="bi bi-file-earmark-medical"></i> My Appointments 
                </a>
                <a class="nav-link text-white" href="@Url.Action("MyMedicalRecords", "Patient")">
                    <i class="bi bi-plus-circle"></i> My MedicalRecords
                </a>
                <a class="nav-link text-white" href="@Url.Action("Logout", "Account")">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="content-area">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
