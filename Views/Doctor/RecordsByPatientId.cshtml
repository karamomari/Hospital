@model PatientRecord

@{
    ViewData["Title"] = "Patient Record Details";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null)
{
    <p>No record found.</p>
}
else
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Patient Information
        </div>
        <div class="card-body">
            <p><strong>Insurance:</strong> @Model.Patient?.InsuranceNo</p>
            <p><strong>Id:</strong> @Model.Patient?.Id</p>
            <p><strong>DOB:</strong> @Model.Patient?.DOB</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            Medical Record
        </div>
        <div class="card-body">
            <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
            <p><strong>Treatment:</strong> @Model.Treatment</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Date:</strong> @Model.RecordDate.ToString("yyyy-MM-dd")</p>
        </div>
    </div>
}
