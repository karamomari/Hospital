@model PatientRecord

@{
    ViewData["Title"] = "Edit Patient Record";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditRecord" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Diagnosis" class="form-label"></label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Treatment" class="form-label"></label>
        <input asp-for="Treatment" class="form-control" />
        <span asp-validation-for="Treatment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Records" class="btn btn-secondary">Cancel</a>
</form>
